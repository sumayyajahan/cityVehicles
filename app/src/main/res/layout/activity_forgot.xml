<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoId"
        android:src="@drawable/main"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/textId"
        android:text="Oh! Forgot your Password?"
        android:fontFamily="sans-serif"
        android:textSize="25sp"
        android:textColor="#4a5a57"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"/>
    <TextView
        android:text="Please type your Email or your mobile number and a confirmation code will send your address."
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textColor="#4a5a57"
        android:textAlignment="center"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/mail"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textSize="20sp"
        android:textColor="#8e8996"
        android:background="@drawable/textfield"
        android:layout_gravity="center"/>
    <TextView
        android:text="or"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textColor="#4a5a57"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="Mobile No"
        android:textSize="20sp"
        android:textColor="#8e8996"
        android:drawableLeft="@drawable/smartphone"
        android:background="@drawable/textfield"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@drawable/button_text_style"
        android:background="@drawable/style" />


</LinearLayout>